<%- include('../partials/header') %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="card mt-3">
        <div
          class="card-header d-flex justify-content-between align-items-center  "
        >
          <h2>Single Product</h2>
          <a href="/" class="btn btn-success">All Product</a>
        </div>
        <div class="card-body">
          <table class="table">
            <tr>
              <td>Id</td>
              <td>:</td>
              <td><%= result.id %></td>
            </tr>
            <tr>
              <td>Product Name</td>
              <td>:</td>
              <td><%= result.product_name %></td>
            </tr>
            <tr>
              <td>Description</td>
              <td>:</td>
              <td><%= result.description %></td>
            </tr>
            <tr>
              <td>Orginal Price</td>
              <td>:</td>
              <td><%= result.orginal_price %></td>
            </tr>
            <tr>
              <td>Selling Price</td>
              <td>:</td>
              <td><%= result.selling_price %></td>
            </tr>
            <tr>
              <td>Photo</td>
              <td>:</td>
              <td><img src="/public/uploads/<%= result.product_photo %>" class="rounded-circle" width="200" alt=""></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
